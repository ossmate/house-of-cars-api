// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id String @id @default(uuid())
  brand String
  model String
  generation String
  engine String
  price Float
  isHighlighted Boolean @default(false)
}

model Brand {
  id String @id @default(uuid())
  name String
  imageUrl String
}